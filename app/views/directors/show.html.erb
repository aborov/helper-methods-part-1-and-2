<div>
  <div>
    <h1>
      Director #<%= @director.id %> details
    </h1>

    <div>
      <div>
        <a href="<%= directors_path %>">
          Go back
        </a>
      </div>

      <div>
        <%= link_to "Edit director", edit_director_path(@director) %>
      </div>

      <div>
        <%= link_to "Delete director", @director, { :data => { :turbo_method => "delete" } } %>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @director.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @director.dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @director.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @director.image %>">
      </dd>
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<h1>
  List of all directors
</h1>

<hr>

<div>
  <%= link_to "Add a new director", new_director_path %>
</div>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

     <th>
      Dob
    </th>

    <th>
      Bio
    </th>

 <th>
      Image
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= movie.id %>
      </td>

      <td>
        <%= movie.title %>
      </td>

      <td>
        <%= movie.description %>
      </td>

      <td>
        <%= time_ago_in_words(movie.created_at) %> ago
      </td>
      <td>
        <%= time_ago_in_words(movie.updated_at) %> ago
      </td>

      <td>
        <%= link_to "Show details", movie %>
      </td>
    </tr>
  <% end %>
</table>
